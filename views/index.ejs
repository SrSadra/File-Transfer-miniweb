<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Easy File Transfer</title>
</head>
<body>
    <% if (locals.arrFile != null){ %>
        <div>your file...</div>
        <% locals.arrFile.map((element) => { %>
            <% let karim = `/file/${element._id}`; %>
             <a href=<%= karim %>><%= element.originalName%></a>
            <br>
        <% }) %>
    <% } %>
    <form style="display: grid;" enctype="multipart/form-data" action="/" method="post">
        <label for="fileInp">File: </label>
        <input type="file" id="fileInp" name="fileInp" required>
        <label for="passInp">Password: </label>
        <input type="password" id="passInp">
        <button id="sub" style="grid-column: span 2;" type="submit">Share</button>
    </form>
    <script type="text/javascript" src="/Indexscript.js"></script>
</body>
</html>