<body>
    <% if (locals.error){ %>
        <div>Incorrect password</div>
    <% } %>
    <form style="display: grid;"  method="POST">
        <label for="passInp">Password: </label>
        <input type="password" id="passInp" name="password">
        <button id="sub" style="grid-column: span 2;" type="submit">Enter</button>
    </form>
    <script type="text/javascript" src="/Indexscript.js"></script>
</body>
</html>